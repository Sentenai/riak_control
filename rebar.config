%% -*- mode: erlang -*-

{erl_opts, [warnings_as_errors, debug_info]}.

{edoc_opts, [{preprocess, true}]}.

{cover_enabled, true}.

{deps, [
       {webmachine, ".*",
        {git, "git://github.com/basho/webmachine", {branch, "master"}}},
       {riak_core, ".*",
        {git, "git://github.com/basho/riak_core", {branch, "master"}}},
       {erlydtl, ".*",
        {git, "git://github.com/evanmiller/erlydtl.git", {branch, "master"}}}
       ]}.

{plugin_dir, "src"}.
{plugins, [rebar_js_concatenator_plugin,
           rebar_js_handlebars_plugin,
           rebar_js_minispade_plugin,
           rebar_js_uglifier_plugin]}.

{js_handlebars, [
    {doc_root,   "priv/admin/js/templates"},
    {out_dir,    "priv/admin/js"},
    {target,     "Ember.TEMPLATES"},
    {compiler,   "Ember.Handlebars.compile"},
    {templates,  [{"templates", ["application", "snapshot", "cluster", "ring", "partition_filter"]}]}
]}.
