#stats-page

  h2
    headline-font()
    font-size : 24px

  svg
    font  : 12px 'titillium'
  
  .line
    line()

  path.line-marker
    display : none !important

  text
    fill : mediumGray
   
  .axis path, .axis line
    fill            : none
    stroke          : lightWhite
    shape-rendering : crispEdges

    &.line
      line()

  .chart-container
    width : 50%
    float: left
    position: relative

    .chart-wrapper
      corners()
      background : darkened
      padding    : 10px 0
      margin     : 10px 15px  
  
  #stats-area
    margin : 0 auto
    width  : 960px

  #add-new-graph
    width      : 650px
    margin     : 25px auto
    text-align : center

  .changey, .add-node
    float        : right
    margin-top   : 25px
    margin-right : 15px

    a
      cursor : pointer

  .remove-graph
    dimensions(25px, 25px)
    css-transition(opacity .5s ease)
    display    : block
    background : url('/admin/ui/images/close-general.png') left top no-repeat transparent
    cursor     : pointer
    position   : absolute
    right      : 0
    top        : 0
    margin     : 40px 16px 0 0
    opacity    : .25

    &:hover
      css-transition(opacity .2s ease)
      opacity : .8

  #graphs
    
    h2
      margin-top     : 25px
      margin-bottom  : 12px
      padding-bottom : 0
      // Floating this h2 causes the graph to perpetually
      // expand when the window is resized.
      //float          : left
      text-transform : capitalize
      margin-left    : 15px
      max-width      : 420px
      line-height    : 1em
      height         : 2em
      position       : relative

      span
        display  : block
        position : absolute
        bottom   : 0
        padding  : 0 0 8px 0

  .node-tag
    corners()
    headline-font()
    font-weight : bold
    font-size   : 85%
    padding     : 5px 10px
    background  : riakred
    float       : left
    color       : #ffffff;
    text-shadow : none;
    margin      : 15px 5px 0 0

    .rm-node
      corners(50%)
      dimensions(15px, 15px)
      background  : rgba(0, 0, 0, .2);
      display     : inline-block
      margin-left : 10px
      cursor      : pointer
      text-align  : center
      &:hover
        background : rgba(0, 0, 0, .15);

  #add-new-graph
    select
      margin-top: 42px








